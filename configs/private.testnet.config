#/configs/private.testnet.config

max-log-file-size=0
log-level=2

testnet=1
data-dir=/home/monero/.bitmonero

detach=1
non-interactive=1

rpc-bind-ip=0.0.0.0
rpc-bind-port=80
confirm-external-bind=1
rpc-access-control-origins=*

no-igd=1                    # Disable UPnP port mapping
hide-my-port=1              # Hide my port

# add-exclusive-node=127.0.0.1:9001 Add for later node

db-sync-mode=safe

fixed-difficulty=10

limit-rate-up=1048576     # 1048576 kB/s -> 1GB/s 
limit-rate-down=1048576   # 1048576 kB/s -> 1GB/s 
